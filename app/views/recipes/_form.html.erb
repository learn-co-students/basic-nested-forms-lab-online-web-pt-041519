<%= form_for @recipe do |f| %>
  
  <h3> Recipe </h3>
  Title: <%= f.text_field :title %><br>

  <h4>Ingredient 1</h4>
  <%= f.fields_for :ingredients do |ing| %>
    <%= ing.label :name %>
    <%= ing.text_field :name %><br>
    <%= ing.label :quantity %>
    <%= ing.text_field :quantity %><br><br>
  <% end %>

  <%= f.submit %>

<% end %>